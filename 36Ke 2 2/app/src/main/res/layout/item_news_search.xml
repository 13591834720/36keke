<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/news_img"
            android:layout_width="@dimen/onehundred"
            android:layout_height="@dimen/onehundred"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/news_search_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/news_img"
            android:text="titles" />

        <TextView
            android:id="@+id/news_search_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_search_titles"
            android:layout_toRightOf="@id/news_img"
            android:text="author" />

        <TextView
            android:id="@+id/news_search_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/news_search_titles"
            android:text="type" />
    </RelativeLayout>


</LinearLayout>
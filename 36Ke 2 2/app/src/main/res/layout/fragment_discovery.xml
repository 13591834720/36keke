<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.youth.banner.Banner
            android:id="@+id/disc_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_hundred_and_eighty" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/dis_startup_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/five">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:src="@mipmap/discovery_icon_startup1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/startup_company"
                    android:textSize="@dimen/fifteen" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dis_college_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/five">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:src="@mipmap/discovery_icon_research1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/graduate"
                    android:textSize="@dimen/fifteen" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/discovery_activity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/five">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:src="@mipmap/discovery_icon_item" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recent"
                    android:textSize="@dimen/fifteen" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/fifteen"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/five">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                android:background="@mipmap/discovery_icon_days" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/ten"
                android:background="@color/gray_one" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/found_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:text="@string/dis_money" />

                <TextView
                    android:id="@+id/found_found_moneys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_toLeftOf="@id/found_money"
                    android:text="@string/money"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/ten" />

                <TextView
                    android:id="@+id/kk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/found_found_moneys"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:text="@string/dis_num" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/found_money"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_toLeftOf="@id/kk"
                    android:textColor="@color/yellow"
                    android:text="@string/acount_dis"
                    android:textSize="@dimen/ten" />

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/ten">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:text="@string/hot"
                android:textSize="@dimen/thirty" />

            <TextView
                android:id="@+id/dis_see_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ten"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="@dimen/ten"
                android:text="@string/see_all"
                android:textSize="@dimen/fifteen" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/two"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/dis_project_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dis_logo_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dis_name_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/five" />

                <TextView
                    android:id="@+id/dis_brief_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/five" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/five"
                        android:textColor="@color/orange" />

                    <TextView
                        android:id="@+id/dis_content_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/five"
                        android:textColor="@color/orange" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dis_project1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dis_logo_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dis_name_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/five" />

                <TextView
                    android:id="@+id/dis_brief_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/five" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/five"
                        android:textColor="@color/orange" />

                    <TextView
                        android:id="@+id/dis_content_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/five"
                        android:textColor="@color/orange" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dis_project2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dis_logo_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dis_name_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/five" />

                <TextView
                    android:id="@+id/dis_brief_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/five" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/five"
                        android:textColor="@color/orange" />

                    <TextView
                        android:id="@+id/dis_content_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/five"
                        android:textColor="@color/orange" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/ten">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:text="@string/invest_dis"
                android:textSize="@dimen/twenty" />

            <TextView
                android:id="@+id/dis_understand_invest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ten"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/understand_invest"
                android:textSize="@dimen/fifteen" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/twenty"
                android:layout_marginTop="@dimen/ten"

                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/ten"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/eighty"
            android:layout_gravity="center"
            android:background="@color/white"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dis_trade_news"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/twenty"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:text="行业新闻"
                android:textColor="@color/blueness"
                android:textSize="@dimen/fifteen" />

            <Button
                android:id="@+id/dis_project_news"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/twenty"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:text="@string/trends"
                android:textColor="@color/blueness"
                android:textSize="@dimen/fifteen" />

            <Button
                android:id="@+id/dis_investing_activities"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/twenty"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:padding="@dimen/five"
                android:text="@string/investing_activities"
                android:textColor="@color/blueness"
                android:textSize="@dimen/fifteen" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ten"
            android:background="@color/gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:text="@string/line"
            android:textSize="@dimen/twenty" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/ten"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/dis_on_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:background="@mipmap/discovery_bg_playback3"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/two_hundred"

                android:src="@mipmap/discovery_icon_playback" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/a"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/time"
                android:textColor="@color/white" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/ten"
            android:background="@color/gray_one" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/one_hundred_and_fifty"
            android:layout_marginTop="@dimen/ten"
            android:background="@color/gray"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/dis_find_project"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/twenty"
                android:layout_weight="1"
                android:background="@mipmap/discovery_ph_item"
                android:orientation="vertical"
                android:padding="@dimen/fifteen">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/find"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="@dimen/twenty" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/see_day"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/fifteen" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/dis_find_investors"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/twenty"
                android:layout_weight="1"
                android:background="@mipmap/discovery_ph_investor"
                android:orientation="vertical"
                android:padding="@dimen/fifteen">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search"
                    android:textColor="@color/green"
                    android:textSize="@dimen/twenty" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/overall"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/fifteen" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dis_business_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/discovery_icon_entrepreneurs" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_marginRight="@dimen/two_hunder_"
                android:text="@string/entrepreneurs"
                android:textSize="@dimen/fifteen" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/common_arrow" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/dis_new_investor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/discovery_icon_new_investor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_marginRight="@dimen/one_hundred_and_seventy"
                android:text="@string/investors"
                android:textSize="@dimen/fifteen" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/common_arrow" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />
    </LinearLayout>


</ScrollView>
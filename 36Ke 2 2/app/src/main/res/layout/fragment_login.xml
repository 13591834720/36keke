<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">

        <EditText
            android:id="@+id/mine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/onehundred"
            android:hint="@string/phone_login" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">

        <EditText
            android:id="@+id/mine_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_name"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:hint="@string/login_psw" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:gravity="right"
        android:id="@+id/mine_forget_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/mine_psw"
        android:layout_margin="@dimen/ten"
        android:background="@null"
        android:hint="@string/forget_psw"
        android:textSize="@dimen/ten" />

    <Button
        android:id="@+id/mine_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mine_forget_password"
        android:layout_margin="@dimen/ten"
        android:text="@string/login"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/share_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:layout_weight="1"
            android:src="@mipmap/common_icon_share_qq" />

        <ImageView
            android:id="@+id/share_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:layout_weight="1"
            android:src="@mipmap/common_icon_share_weibo" />
    </LinearLayout>

</LinearLayout>